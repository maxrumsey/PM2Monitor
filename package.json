{
  "name": "PM2_Monitor",
  "version": "1.1.0",
  "description": "Remote PM2 Status Monitor.",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "./node_modules/.bin/electron-builder --dir",
    "dist": "./node_modules/.bin/electron-builder"
  },
  "repository": "https://github.com/maxrumsey/PM2Monitor",
  "keywords": [
    "Electron",
    "PM2",
    "Monitor",
    "SSH"
  ],
  "author": "Max Rumsey (maxrumsey.xyz) <max@maxrumsey.xyz>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^9.1.0",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bootstrap": "^4.3.1",
    "electron-json-storage": "^4.1.7",
    "jquery": "^3.4.1",
    "node-ssh": "^6.0.0",
    "pm2": "^3.5.1",
    "popper.js": "^1.15.0",
    "prettysize": "^2.0.0"
  },
  "build": {
    "asar": false,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/src/renderer.js"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    }
  }
}
